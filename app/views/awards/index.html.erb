<table class='individual-awards' border="1">
  <tr class='individual-row-header' >
    <th align = center colspan=2 class="awt"><font color="white">Individual Awards</font></th>
  </tr>
  <% @cat_list.each do |c| %>
    <% if @awards["#{c}m"].count > 0 &&  @awards["#{c}f"].count %>
      
      <tr bgcolor=" yellowgreen">
        <th> <%= c.upcase %> Male </th>
        <th> <%= c.upcase %> Female </th>
      <tr>  
      <tr> 
        <td valign="top">
          <% place = 0 %>
          <table class='individual-awards-class'>
            <tr>
              <th>
                Place
              </th>
              <th>
                Runner
              </th>
              <th>
                Total Score
              </th>
            <tr>  
            <% @awards["#{c}m"].each do |result| %>
              <tr>
                <td width=10%>
                  <b><%= place += 1 %></b>
                </td>
                <td>
                  <b><%= result.firstname %> <%= result.surname %></b><br>
                  <%= result.school%><br>
                  Day1: <%=result.day1_score.round(3) %> Day2: <%=result.day2_score.round(3) %>
                </td>
                <td><b><%=result.total.round(2)%></b></td>
              </tr>
              <% break if place > 9 %>
            <% end %> 
          </table>
        </td>
        <td valign="top">
          <% place = 0 %>
          <table class='individual-awards-class'>
            <tr>
              <th>
                Place
              </th>
              <th>
                Runner
              </th>
              <th>
                Total Score
              </th>
            <tr>            
            <% @awards["#{c}f"].each do |result| %>
            
              <tr>
                <td width=10%>
                  <b><%= place += 1 %></b>
                </td>
                <td>
                  <b><%= result.firstname %> <%= result.surname %></b><br>
                  <%= result.school%><br>
                  Day1: <%=result.day1_score.round(3) %> Day2: <%=result.day2_score.round(3) %>
                </td>
                <td><b><%=result.total.round(2)%></b></td>
              </tr>
              <% break if place > 9 %>
            <% end %> 
          </table>
        </td>
      </tr>
    <% end %>    
  <% end %> 
</table>
